{
  "manifest_version": 3,
  "name": "Netflix Sync",
  "version": "1.0.0",
  "description": "同步 Netflix 播放狀態，讓多人可以一起觀看",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.netflix.com/*",
    "https://your-vercel-app.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Sync"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 